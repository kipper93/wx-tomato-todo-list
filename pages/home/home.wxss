/* pages/home/home.wxss */
.page{
    background-color: #f7f7f7;
    height: calc(100vh - 20rpx);
    padding: 10rpx;
}
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
  }
  
  .userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  /* 日历 */
.calendar_lmy {
    --calendar-height: 460rpx;

}
.calendar_lmy .van-calendar {
    height:320rpx !important;
    border-radius: 20rpx;
    background: linear-gradient(180deg, #F2918A, #ffffff);
}

.calendar_lmy .van-calendar__day {
    height: 60rpx !important;

}
.calendar_lmy .van-calendar .van-calendar__header{
      display: none !important;
}

/* 背景图改变 */
.calendar_lmy .van-calendar .van-calendar__day--selected .van-calendar__selected-day {
  background-color: rgba(0, 0, 0, 0);
  color: rgb(0, 0, 0);
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-position: center;
  background-size: 60rpx 60rpx;
}
.van-calendar__month-title{
    display: none !important;
}
.addIcon {
    font-size: 60rpx;
    position: fixed;
    z-index: 999;
    bottom: 160rpx;
    right: 40rpx;
}
.home_box{
    display: flex;
    justify-content: space-between;
    gap: 24rpx;
    padding: 20rpx;
    flex-wrap: wrap;
}
.content_body {
    margin-bottom: 80rpx;
}
.add_dialog {
    padding: 20rpx;
}

/*  */
.flex_between_header {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.flex_left, .flex_right {
    font-size: 24rpx !important;
    display: inline-block !important;
}
.flex_left {
    width: 140rpx !important;
}
.flex_right {
    flex: 1;
}